<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background (color di sfondo della ProgressBar) -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/black" />  <!-- Colore di sfondo grigio scuro -->
            <corners android:radius="100dp" />  <!-- Raggio degli angoli -->
        </shape>
    </item>

    <!-- Progress (colore della barra di progresso) -->
    <item android:id="@android:id/progress">
        <scale android:scaleWidth="100%">
            <shape>
                <solid android:color="@color/bluette" />  <!-- Colore della progress bar -->
                <corners android:radius="8dp" />
            </shape>
        </scale>
    </item>
</layer-list>
